{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["src/types/*", "src/generated/*"]
    },
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext", "dom", "webworker"],
    "jsx": "react",
    "moduleResolution": "node",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true
  },
  "include": ["src/cli/**/*"],
  "exclude": [
    ".build",
    ".cache",
    ".ignore",
    ".reports",
    "3rdparty",
    "cypress",
    "data",
    "docker",
    "docs",
    "node_modules",
    "static",
    "tsconfig.json",
    "/src/.generated/",
    "src/**/*.spec.*",
    "src/**/*.test.*",
    "src/**/__tests__/**/*",
    "src/*generated*/**/*",
    "src/algorithms/__test_data__/**/*",
    "src/algorithms/model.ts",
    "src/algorithms/results.ts",
    "src/components/Main/Results/AgeBarChart.tsx",
    "src/components/Main/PrintPreview/PrintPreview.tsx",
    "src/components/Main/Results/DeterministicLinePlot.tsx",
    "src/components/Main/Results/Utils.ts",
    "src/styles/**/*",
    "static/**/*"
  ]
}
